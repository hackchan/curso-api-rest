  <body>
    <%- include('./partials/header') %>
    <div class="formulario">
      <div class="container">
        <div class="col-xs-8 col-xs-offset-2">
          <h2 class="text-center">cargar excel</h2>
          <form
            action="/uploads"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="file"></label>
              <input
                type="file"
                name="file"
                id="file"
                class="form-control"
                placeholder="cargar csv"
                required
              />
            </div>

            <div class="form-group">
              <label for="entidad"></label>
              <select
                name="entity"
                class="form-select"
                aria-label="Default select example"
              >
                <optgroup label="Arauca">
                  <% for(let entity of entidades.arauca) {%>
                  <option value="<%=entity.identidad%>">
                    <%=entity.nombre%>
                  </option>
                  <%}%>
                </optgroup>

                <optgroup label="Boyaca">
                  <% for(let entity of entidades.boyaca) {%>
                  <option value="<%=entity.identidad%>">
                    <%=entity.nombre%>
                  </option>
                  <%}%>
                </optgroup>

                <optgroup label="Casanare">
                  <% for(let entity of entidades.casanare)
                  {%>
                  <option value="<%=entity.identidad%>">
                    <%=entity.nombre%>
                  </option>
                  <%}%>
                </optgroup>
              </select>
            </div>

            <div class="form-group">
              <input
                type="submit"
                value="load file"
                class="btn btn-primary mt-2"
              />
            </div>
          </form>
        </div>
      </div>
    </div>
